	СтандартнаяОбработка = Ложь;
	
	Если ЗначениеЗаполнено(Данные.ВидНоменклатуры) Тогда
		Представление = Данные.Наименование + " (" + НРег(Данные.ВидНоменклатуры) + ")";
	Иначе 
		Представление = Данные.Наименование;		
	КонецЕсли;
	
